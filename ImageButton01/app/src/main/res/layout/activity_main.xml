<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/ib_stopSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/stopsign" />

    <ImageButton
        android:id="@+id/ib_rightArrow"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        app:srcCompat="@drawable/arrowright" />

    <ImageButton
        android:id="@+id/ib_applelogo"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        app:srcCompat="@drawable/applelogo" />

    <TextView
        android:id="@+id/tv_clickText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="CLICK ME" />
</LinearLayout>